<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/img"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="430dp"
        android:text="Text Text"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnForward2"
        android:layout_alignBottom="@id/btnForward2"
        android:layout_marginEnd="220dp"
        android:layout_toStartOf="@id/btnForward2"
        android:background="@drawable/baseline_arrow_back_24"
        android:text="back" />

    <Button
        android:id="@+id/btnForward2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="681dp"
        android:background="@drawable/baseline_arrow_forward_24"
        android:text="Forward" />

</RelativeLayout>