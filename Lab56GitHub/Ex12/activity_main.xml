<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DA9696">

    <Button
        android:textSize="10sp"
        android:id="@+id/btnI1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="311dp"
        android:layout_marginBottom="470dp"
        android:text="Intent1" />

    <Button
        android:textSize="10sp"
        android:id="@+id/btnI2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="471dp"
        android:text="Intent2" />

    <Button
        android:textSize="10sp"
        android:id="@+id/btnI3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="471dp"
        android:text="Intent3" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnForward"
        android:layout_alignBottom="@id/btnForward"
        android:layout_marginEnd="220dp"
        android:layout_toStartOf="@id/btnForward"
        android:background="@drawable/baseline_arrow_back_24"
        android:text="back" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="681dp"
        android:background="@drawable/baseline_arrow_forward_24"
        android:text="Forward" />

</RelativeLayout>
