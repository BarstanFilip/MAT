<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">






    <TextView
        android:id="@+id/txtChat2"
        android:layout_alignTop="@id/txtChat2"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:text="Chat2"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btnToChat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtChat2"
        android:layout_alignParentBottom="@+id/txtChat2"
        android:layout_marginBottom="-65dp"
        android:layout_marginLeft="300dp"
        android:text="->chat1" />


    <EditText
        android:id="@+id/edtTxt2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="type a message"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSendToChat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="21dp"
        android:text="Send" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@+id/edtTxt2"
        android:layout_below="@+id/txtChat2"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="49dp" />


</RelativeLayout>


